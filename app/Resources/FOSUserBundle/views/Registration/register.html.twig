{% extends 'FOSUserBundle::layout.html.twig' %}

{% block fos_user_content %}
<div class="container">
    <div class="row clearfix">
        <div class="col-md-3 column"></div>

        <div class="col-md-6 column borderBox">

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register" role="form">
                {{ form_errors(form) }}
                <div class="form-group{% if form.email.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {% if form.email.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.email.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.username.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        {% if form.username.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.username.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.plainPassword.first.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {% if form.plainPassword.first.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.plainPassword.first.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.plainPassword.second.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {% if form.plainPassword.second.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.plainPassword.second.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.name.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {% if form.name.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.name.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.surname.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.surname, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
                        {% if form.surname.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.surname.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.phoneNumber.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                        {% if form.phoneNumber.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.phoneNumber.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group{% if form.mobileNumber.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.mobileNumber, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.mobileNumber, {'attr': {'class': 'form-control'}}) }}
                        {% if form.mobileNumber.vars.errors[0].message is defined %}
                        <span class="help-block">
                            {{ form.mobileNumber.vars.errors[0].message }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                <br/>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
                </div>

                {{ form_rest(form) }}

            </form>

        </div>
        
        <div class="col-md-3 column"></div>

    </div>
</div>
{% endblock %}
