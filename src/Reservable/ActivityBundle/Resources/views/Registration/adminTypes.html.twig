{% extends '::admin.html.twig' %}

{% block page_title %}
    {% trans %}Gestionar tipos{% endtrans %}
{% endblock %}

{% block page_content %}

    <style>
        .deleteType:hover{
            font-size: 1.5em;
            cursor:pointer;
        }
    </style>

    <div class="row">
    {# Left col #}
    <section class="col-lg-12 connectedSortable ui-sortable">
        {# Tabla tipos #}
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{% trans %}Tipos{% endtrans %}</h3>
                <div class="box-tools pull-right">
                    <span class="label label-success" id="addType"><i class="fa fa-plus"></i>{% trans %} Nuevo{% endtrans %}</span>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table" id="typesTable">
                    <tbody><tr>
                        <th></th>
                        <th>{% trans %}Tipo{% endtrans %}</th>
                        <th>{% trans %}Modalidad{% endtrans %}</th>
                        <th class="text-center">{% trans %}Icono{% endtrans %}</th>
                        <th class="text-center">{% trans %}Modificar{% endtrans %}</th>
                        <th class="text-center">{% trans %}Eliminar{% endtrans %}</th>
                    </tr>
                    {% for type in types %}
                        <tr id="{{ type.id }}" class="pointerSelect">
                            <td></td>
                            <td>{{ type.name }}</td>
                            <td>{{ type.mode }}</td>
                            <td class="text-center">{% if type.icon is defined %}<i class="{{ type.icon }}"></i>{% endif %}</td>
                            <td class="text-center" style="color:green;"><i class="fa fa-pencil"></i></td>
                            <td class="text-center deleteType" style="color:red;" typeID="{{ type.id }}" typeName="{{ type.name }}"><i class="fa fa-minus-circle"></i></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </section>
    {# Left col #}
    </div>

    <div class="modalDelete">
        <div class="modal fade" id="modalDeleteType">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">{% trans %}Eliminar tipo{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        <p>{% trans %}Se va a eliminar el tipo {% endtrans %} "<span id="typeName"></span>"
                        <p>{% trans %}NOTA: Si elimina este tipo, también se eliminarán todas las asociaciones con las características que tenga este tipo y los tipos y features que tengan los alojamientos{% endtrans %}</p>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default pull-left" type="button">{% trans %}Cancelar{% endtrans %}</button>
                        <button class="btn btn-success" type="button" id="deleteType" typeID="" >{% trans %}Aceptar{% endtrans %}</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>

    <div class="modalAdd">
        <div class="modal fade" id="modalAddType">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">{% trans %}Añadir nuevo tipo{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <input type="text" name="nameType" id="nameType" placeholder="{% trans %}Nombre{% endtrans %}">
                            </div>
                            <div class="col-lg-4">
                                <select style="width:100%;" id="typeSelected">
                                    <option disabled selected>{% trans %}Selecciona modalidad{% endtrans %}</option>
                                    <option value="hour">{%  trans %}Hora{% endtrans %}</option>
                                    <option value="day">{%  trans %}Día{% endtrans %}</option>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <input type="text" name="iconType" id="iconType" placeholder="{% trans %}Icono{% endtrans %}">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default pull-left" type="button">{% trans %}Cancelar{% endtrans %}</button>
                        <button class="btn btn-success" type="button" id="addTypeFeature" typeID="" featureID="" typeName="" featureName="">{% trans %}Aceptar{% endtrans %}</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>

    <script>

        /* Añadir */

        $("#addType").click(function(){
            $("#modalAddType").modal("show");
        });
        $("#typeSelected").change(function(){
            $("#addTypeFeature").attr('typeID', $(this).val());
            $("#addTypeFeature").attr('typeName', $("#typeSelected option:selected").text());
        });
        $("#featureSelected").change(function(){
            $("#addTypeFeature").attr('featureID', $(this).val());
            $("#addTypeFeature").attr('featureName', $("#featureSelected option:selected").text());
        });
        $("#addTypeFeature").click(function(){
            var featureId   = $(this).attr('featureID');
            var featureName = $(this).attr('featureName');
            var typeId      = $(this).attr('typeID');
            var typeName    = $(this).attr('typeName');
            $("#modalAddFeature").modal("hide");
            $.ajax({
                url: '{{ path('add_features') }}',
                data: { 'featureID':featureId, 'typeID':typeId, 'featureName':featureName, 'typeName':typeName },
                type: "post",
                success: function(response) {
                    var html = "<tr id='typeFeature-"+response['typeID']+"-"+response['featureID']+"' class='oneType type-"+response['typeID']+"' style='display: table-row;'>" +
                            "<td></td>" +
                            "<td>"+response['featureName']+"</td>" +
                            "<td>"+response['typeName']+"</td>" +
                            "<td style='color:red;' class='text-center deleteFeature' typeName='"+response['typeName']+"' typeId='"+response['typeID']+"' featureName='"+response['featureName']+"' featureId='"+response['featureID']+"'>" +
                            "<i class='fa fa-minus-circle'></i></td>" +
                            "</tr>";
                    $("#featuresTable tbody").append(html);
                }
            });
        });

        /* Eliminar */

        $(".deleteType").click(function(e){

            e.preventDefault();

            var typeId      = $(this).attr('typeID');
            var typeName    = $(this).attr('typeName');
            $("#modalDeleteType #typeName").html(typeName);
            $("#modalDeleteType #deleteType").attr('typeID', typeId);
            $("#modalDeleteType").modal("show");
        });
        $("#deleteType").click(function(){
            var typeId      = $(this).attr('typeID');
            $("#modalDeleteType").modal("hide");
            $.ajax({
                url: '{{ path('delete_type') }}',
                data: { 'typeID': typeId },
                type: "post",
                success: function(response) {
                    console.log(response);
                    $("#" + response['idDelete']).detach();
                }
            });
        });
    </script>

{% endblock %}